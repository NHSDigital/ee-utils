{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./lib/esm",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@octokit/rest": ["./node_modules/@octokit/rest"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
