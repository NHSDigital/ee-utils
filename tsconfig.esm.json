{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./lib/esm",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "paths": {
      "@octokit/rest": ["./node_modules/@octokit/rest"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**", "**/*.test.ts"]
}
