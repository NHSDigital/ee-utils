{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./lib/cjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
      "@octokit/rest": ["./node_modules/@octokit/rest"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**", "**/*.test.ts"]
}
