  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib/cjs",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts",
    "src/filenames.ts",
    "src/index.ts",
    "src/logger.ts"
  ],

  "exclude": ["node_modules"]
}
